<h1>Listing meetings</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Length</th>
    <th>Who was there</th>
    <th>Total cost</th>
    <th></th>
  </tr>

<% Meeting.all.each do |meeting| %>
  <tr>
    <td><%= link_to meeting.name, meeting %></td>
    <td><%= meeting.length %></td>
	<td>
		<% meeting.employees.each do |employee| %>
			<table>
				<tr><td><%= link_to employee.name, employee_path(employee.id) %>
						<%= link_to "Remove", @attend, :confirm => 'Are you sure?', :method => :delete %>
						</td></tr>
			</table>
		<% end %>
	</td>
	<td><%= meeting.cost %></td>	
    <td><%= link_to 'Show', meeting %></td>
    <td><%= link_to 'Edit', edit_meeting_path(meeting) %></td>
    <td><%= link_to 'Destroy', meeting, :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>

</table>

<br />

<%= link_to 'New Meeting', new_meeting_path %>

